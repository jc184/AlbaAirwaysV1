@model IEnumerable<AlbaAirwaysV1.Models.Entities.Booking>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoOfAdults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfChildren)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfInfants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmationNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InboundFlight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OutboundFlight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfAdults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfChildren)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfInfants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmationNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InboundFlight.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutboundFlight.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
